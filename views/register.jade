doctype html
html
	include layouts/head.jade

	body
		div.login
			div.login-body
				img(src="../../images/logo.png", border="0", style="max-width:200px !important;")
				br
				div.login-content
					form(role='form', action="/register",method="post")
						.form-group
							input.form-control(type='text', name="username", placeholder='Enter Username').input-text
						.form-group
							input.form-control(type='password', name="password", placeholder='Password').input-text
						div.login-links.register-links
							button.btn.btn-primary(type='submit') Register
							&nbsp;
							a(href='/')
								button.btn.btn-primary(type="button") Cancel
