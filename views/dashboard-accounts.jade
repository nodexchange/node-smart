extends layouts/dashboard

block content
	section.dashboard-content
		.container
			.bootstrap-table-container
				#toolbar
				table#table(
					data-toolbar='#toolbar',
					data-search='true', data-show-refresh='true',
					data-show-toggle='true',
					data-show-columns='true',
					data-show-export='true',
					data-detail-view='true',
					data-detail-formatter='detailFormatter',
					data-minimum-count-columns='2',
					data-show-pagination-switch='true',
					data-pagination='true', data-id-field='id',
					data-page-list='[10, 25, 50, 100, ALL]',
					data-show-footer='false',
					data-side-pagination='client', 
					data-url='/api/data/dashboard-accounts', data-response-handler='responseHandler')
				script(src="/scripts/dashboard-accounts.js", type="text/javascript")
				script(src="/scripts/bootstrap-table.js", type="text/javascript")
